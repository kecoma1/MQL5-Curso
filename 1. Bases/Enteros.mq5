void OnInit() {
   // Las líneas casi siempre deben acabar con ;
   // Declaramos nuestra primera variable
   int a = 5;
   
   // Las asignaciones y las llamadas a funciones, como vamos a ver ahora, siempre deben tener un ; al final
   
   // Mostramos en la consola el valor que tiene la variable
   Print("A: ", a);
   
   // Cambiamos el valor dentro de esa otra variable
   a = 0;
   
   Print("A: ", a);
   
   // Declaramos una variable short
   short b = 3;
   Print("B: ", b);
   b = 2;
   Print("B: ", b);
   
   // Declaramos una variable short
   short c = 23;
   Print("B: ", c);
   c = 20;
   Print("B: ", c);
   
   // Vamos a probar el código en el probador de estrategias
}